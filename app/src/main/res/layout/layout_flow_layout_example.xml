<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    app:layout_constraintTop_toBottomOf="@id/sb_clip"
    app:cardBackgroundColor="@color/teal_200"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">

    <me.liwenkun.demo.customview.FlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingVertical="16dp"
        app:itemSpacing="5dp"
        app:constrainChildHeight="false"
        app:lineSpacing="10dp"
        app:overflowBehavior="skip">

        <TextView
            android:text="你好，世界"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:text="欢迎光临"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="bottom"
            android:text="今天天气不错"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="早上好"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="你好呀"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="祝你愉快"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="一切顺利"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="午安"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="晚上好"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="继续加油！"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="周末愉快"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="加油打工人"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="保持微笑"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="心想事成"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="元气满满"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="美好一天"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="新的一天开始啦"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="继续努力"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="你好，朋友"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="祝你开心每一天"
            android:padding="8dp"
            android:background="@drawable/bg_round_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </me.liwenkun.demo.customview.FlowLayout>

</androidx.cardview.widget.CardView>
